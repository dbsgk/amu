package nested;

import java.awt.Button;
import java.awt.Container;
import java.awt.GridLayout;
import java.awt.TextField;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JFrame;

public class Calc1 extends JFrame{
	TextField tf1,tf2;
	Button[] b = new Button[18]; //b0,b1,b2,b3,b4,b5,b6,b7,b8,b9,bBack,bReset,bPlus,bMinus,bMul,bDiv,bDot,bResult;
	public Calc1() {
		this.setLayout(null);
		tf1 = new TextField();
		tf2 = new TextField();
		for(int i=0;i<b.length;i++) {
			b[i]= new Button(i+"");
		}//for
		b[10].setLabel("¡ç");
		b[11].setLabel("C");
		b[12].setLabel("+");
		b[13].setLabel("-");
		b[14].setLabel("¡¿");
		b[15].setLabel("/");
		b[16].setLabel(".");
		b[17].setLabel("=");
		
		Container c= this.getContentPane();
		c.add(tf1);
		c.add(tf2);
		c.setLayout(new GridLayout());
		for(int i=0;i<b.length;i++) {
			c.add(b[i]);
		}
		
		tf1.setBounds(20,20,300,50);
		tf2.setBounds(20,80,300,50);
	
		//p.setLayout(new GridLayout(1,5,3,0));
		
		
		
		setTitle("°è»ê±â");
		setBounds(700,200,340,510);
		setResizable(false);
		setVisible(true);
		
		addWindowListener(new WindowAdapter() {

			@Override
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
			
		});
		
	}//calc
	
	
	public static void main(String[] args) {
		new Calc();
	}//main
}//class
